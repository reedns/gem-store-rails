<div data-ng-app='GemStore'>
  <div ng-controller="StoreCtrl as store" data-ng-init="index()">

    <header>
      <h1 class="text-center">Flatlander Crafted Gems</h1>
      <h2 class="text-center">– an Angular store –</h2>
    </header>

    <!--  Products Container  -->
    <div class="list-group">
      <!--  Product Container  -->
      <div class="list-group-item" data-ng-repeat="product in products">
        <h3>{{product.name}} <em class="pull-right">{{product.price | currency}}</em></h3>

        <!-- Image Gallery  -->
        <product-gallery></product-gallery>

        <!-- Product Tabs  -->
        <product-tabs></product-tabs>
      </div>
    </div>

    <form name="newProductForm" ng-submit="create(newProduct)">
      <fieldset class="form-group">
        <input type="text" ng-model="newProduct.name">
      </fieldset>

       <fieldset class="form-group">
        <input type="text" ng-model="newProduct.price">
      </fieldset>

      <fieldset class="form-group">
        <input type="text-area" ng-model="product.description" title="description">
      </fieldset>

      <fieldset class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
      </fieldset>
    </form>
  </div>
</div>
